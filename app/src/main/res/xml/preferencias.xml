<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:key="opc_Fichero"
        android:title="@string/title_Ajustes">

        <EditTextPreference
            android:key="@string/key_NombreFichero"
            android:title="@string/title_NombreFichero"
            android:defaultValue="@string/default_NombreFichero"
            android:singleLine="true"
            app:useSimpleSummaryProvider="true"
            android:icon="@android:drawable/ic_menu_edit"/>

        <SwitchPreference
            android:key="@string/key_TarjetaSD"
            android:title="@string/txtPrefTarjetaSD"
            android:defaultValue="@bool/default_prefTarjetaSD"
            android:summary="@string/txtPrefTarjetaSDExplicaciÃ³n" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="opc_Agregados"
        android:title="@string/title_opcAgregados">

        <ListPreference
            android:key="@string/key_NInitSemillas"
            android:title="@string/title_NInitSemillas"
            android:summary="@string/txtNInitSemillas"
            android:entries="@array/opciones_semillasiniciar"
            android:entryValues="@array/valores_semillasiniciar"
            android:defaultValue="4"
            android:icon="@drawable/compost_36dp"/>

        <ListPreference
            android:key="@string/key_StarterPlayer"
            android:title="@string/title_InitialPlayer"
            android:summary="@string/txtStarterPlayer"
            android:entries="@array/opciones_jugadorInicial"
            android:entryValues="@array/valores_jugadorInicial"
            android:defaultValue="@string/default_StarterPlayer"
            android:icon="@drawable/manage_accounts_36dp" />

    </PreferenceCategory>

</PreferenceScreen>